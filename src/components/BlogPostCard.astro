---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import TagList from './TagList.astro';

interface Props {
  title: string;
  date: Date;
  description: string;
  slug: string;
  image?: ImageMetadata;
  imageAlt?: string;
  tags?: string[];
}

const { title, date, description, slug, image, imageAlt, tags = [] } = Astro.props;
const formattedDate = date.toLocaleDateString('ru-RU', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="post-card">
  {image && (
    <Image src={image} alt={imageAlt || ''} width={480} height={270} class="post-card__image" loading="lazy" />
  )}
  <div class="post-card__body">
    <time datetime={date.toISOString().split('T')[0]}>{formattedDate}</time>
    <h3><a href={`/blog/${slug}/`}>{title}</a></h3>
    <p>{description}</p>
    {tags.length > 0 && <TagList tags={tags.slice(0, 3)} size="sm" />}
  </div>
</article>

<style>
  .post-card {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background-color: var(--color-bg);
    box-shadow: var(--shadow-sm);
    transition: box-shadow 0.2s;
    overflow: hidden;
  }

  .post-card:hover {
    box-shadow: var(--shadow-md);
  }

  .post-card__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-card__body {
    padding: var(--space-lg);
  }

  time {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  h3 {
    margin-top: var(--space-sm);
    font-size: var(--font-size-lg);
  }

  h3 a {
    text-decoration: none;
    color: var(--color-text);
  }

  h3 a:hover {
    color: var(--color-primary);
  }

  p {
    margin-top: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
</style>
