---
import Logo from './Logo.astro';

const navLinks = [
  { href: '/', label: 'Главная' },
  { href: '/uslugi/', label: 'Услуги' },
  { href: '/blog/', label: 'Блог' },
  { href: '/otzyvy/', label: 'Отзывы' },
  { href: '/o-nas/', label: 'О нас' },
  { href: '/kontakty/', label: 'Контакты' },
];

const phone = '+7 (812) 000-00-00';
const phoneHref = 'tel:+78120000000';
const whatsappHref = 'https://wa.me/78120000000';
const telegramHref = 'https://t.me/medved_electrik';
---

<header class="header">
  <div class="header-inner">
    <Logo />

    <div class="header-contacts">
      <a href={phoneHref} class="phone-link" aria-label={`Позвонить: ${phone}`}>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        <span>{phone}</span>
      </a>
      <div class="messenger-links">
        <a href={whatsappHref} target="_blank" rel="noopener noreferrer" aria-label="Написать в WhatsApp">WA</a>
        <a href={telegramHref} target="_blank" rel="noopener noreferrer" aria-label="Написать в Telegram">TG</a>
      </div>
    </div>

    <nav aria-label="Основная навигация">
      <ul class="nav-list">
        {navLinks.map(({ href, label }) => (
          <li><a href={href}>{label}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-bg);
  }

  .header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-md);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-md);
  }

  .header-contacts {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .phone-link {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-weight: 600;
    text-decoration: none;
    color: var(--color-text);
    white-space: nowrap;
  }

  .phone-link:hover {
    color: var(--color-primary);
  }

  .messenger-links {
    display: flex;
    gap: var(--space-sm);
  }

  .messenger-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: var(--radius);
    background-color: var(--color-primary);
    color: #fff;
    font-size: var(--font-size-xs);
    font-weight: 700;
    text-decoration: none;
  }

  .messenger-links a:hover {
    background-color: var(--color-primary-dark);
    color: #fff;
  }

  nav {
    width: 100%;
  }

  .nav-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm) var(--space-md);
    list-style: none;
  }

  .nav-list a {
    font-size: var(--font-size-sm);
    text-decoration: none;
    color: var(--color-text-muted);
  }

  .nav-list a:hover {
    color: var(--color-primary);
  }

  @media (min-width: 768px) {
    .header-inner {
      flex-wrap: nowrap;
    }

    nav {
      width: auto;
      order: 2;
      margin-right: auto;
    }

    .header-contacts {
      order: 3;
      margin-left: 0;
    }
  }
</style>
